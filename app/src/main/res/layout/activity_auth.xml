<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_50">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">


        <ImageView
            android:layout_width="209dp"
            android:layout_height="94dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"
            android:src="@drawable/logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_xxxlarge" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_xxxlarge" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_xxxlarge" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_xxxlarge" />

        <Button
            android:id="@+id/auth_button_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:background="@drawable/btn_rounded_orange_300"
            android:gravity="center"
            android:text="Se connecter"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_medium" />

        <Button
            android:id="@+id/auth_button_register"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:background="@drawable/btn_rounded_white_outline"
            android:gravity="center"
            android:text="S'inscrire"
            android:textAllCaps="false"
            android:textColor="@color/orange_300"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_xxxlarge" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_xxxlarge" />

        <TextView
            android:id="@+id/auth_textview_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="S'inscrire plus tard"
            android:textColor="@color/orange_300"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>